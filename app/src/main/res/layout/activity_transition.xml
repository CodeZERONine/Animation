<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/relativeLayout"
    tools:context=".ActivityTransition">

    <TextView android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="invisible"
        android:id="@+id/inviTextview"
        android:gravity="center"
        android:background="@color/ripple2"/>

        <TextView android:layout_height="wrap_content" android:layout_width="match_parent"
            android:text="Circular Reveal"
            android:id="@+id/circularReveal"
           android:textAlignment="center"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            android:padding="20dp"
            android:background="@drawable/custom_ripple_borderless"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>



       <LinearLayout
           android:layout_marginTop="200dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
                 <ImageView
                     android:layout_width="100dp"
                     android:layout_height="100dp"
                     android:transitionName="image1"
                     android:id="@+id/image1"
                     android:src="@drawable/ic_audiotrack_black_24dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/text1"
               android:text="Shared Animation"
               android:transitionName="text1"
               android:textSize="20sp"
               android:clickable="true"
               android:background="@drawable/custom_ripple_borderless"
               android:textColor="#000"
               android:layout_marginLeft="20dp"
               android:layout_marginTop="30dp"
               android:layout_marginRight="20dp"/>
                   <ImageView
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       android:transitionName="image2"
                       android:id="@+id/image2"
                       android:src="@drawable/ic_directions_walk_black_24dp"/>

       </LinearLayout>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="300dp"
        android:text="Explode transition"
        android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="330dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/explode_java_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="java Code"
                android:textSize="20sp"
                />
            <Button
                android:id="@+id/explode_xml_button"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="XML Code"
                android:textSize="20sp"
                />

        </LinearLayout>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="390dp"
        android:text="Slide transition"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="430dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/slide_java_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="java Code"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/slide_xml_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="XML Code"
            android:textSize="20sp"
            />

    </LinearLayout>
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="500dp"
        android:text="Fade transition"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="540dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/fade_java_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="java Code"
            android:textSize="20sp"
            />
        <Button
            android:id="@+id/fade_xml_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="XML Code"
            android:textSize="20sp"
            />

    </LinearLayout>



</RelativeLayout>